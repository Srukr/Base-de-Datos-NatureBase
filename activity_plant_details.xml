<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground"
    tools:context=".PlantDetails">

    <Button
        android:id="@+id/button8"
        android:layout_width="285dp"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:onClick="GoBack"
        android:text="@string/goback"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="402dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/fondoet"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView_Type"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_CommonName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_LatinName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_Exposure"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_Moisture"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_Height"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_Availability"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_Ease"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
